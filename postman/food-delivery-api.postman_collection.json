{
  "info": {
    "name": "Food Delivery API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Run 'Create Vendor (Once)' first. It sets vendorId for all vendor-dependent requests."
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://15.206.158.169:3000/api/v1"
    },
    {
      "key": "vendorId",
      "value": ""
    },
    {
      "key": "productId",
      "value": ""
    },
    {
      "key": "orderId",
      "value": ""
    },
    {
      "key": "testToken",
      "value": "test-token-123"
    }
  ],
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/health",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "health"
          ]
        }
      }
    },
    {
      "name": "Create Vendor (Once)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const response = pm.response.json();",
              "if (response && response.data && response.data._id) {",
              "  pm.collectionVariables.set('vendorId', response.data._id);",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Vendor A\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/vendors",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "vendors"
          ]
        }
      },
      "description": "Creates a single vendor and stores its id in collection variable 'vendorId'."
    },
    {
      "name": "List Vendors",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/vendors",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "vendors"
          ]
        }
      },
      "description": "Lists vendors. Use 'Create Vendor (Once)' first to set vendorId for other requests."
    },
    {
      "name": "Create Product",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const response = pm.response.json();",
              "if (response && response.data && response.data._id) {",
              "  pm.collectionVariables.set('productId', response.data._id);",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"vendorId\": \"{{vendorId}}\",\n  \"name\": \"Paneer Wrap\",\n  \"price\": 120,\n  \"stock\": 5\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/products",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "products"
          ]
        }
      }
    },
    {
      "name": "List Products",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/products?vendorId={{vendorId}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "products"
          ],
          "query": [
            {
              "key": "vendorId",
              "value": "{{vendorId}}"
            }
          ]
        }
      }
    },
    {
      "name": "Get Product",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/products/{{productId}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "products",
            "{{productId}}"
          ]
        }
      }
    },
    {
      "name": "Create Order",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const response = pm.response.json();",
              "if (response && response.data && response.data.id) {",
              "  pm.collectionVariables.set('orderId', response.data.id);",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"userId\": \"user_123\",\n  \"vendorId\": \"{{vendorId}}\",\n  \"items\": [\n    { \"name\": \"Burger\", \"quantity\": 2, \"price\": 150 },\n    { \"name\": \"Fries\", \"quantity\": 1, \"price\": 80 }\n  ]\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/orders",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "orders"
          ]
        }
      }
    },
    {
      "name": "Create Order (Product)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"userId\": \"user_456\",\n  \"vendorId\": \"{{vendorId}}\",\n  \"items\": [\n    { \"productId\": \"{{productId}}\", \"quantity\": 1 }\n  ]\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/orders",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "orders"
          ]
        }
      }
    },
    {
      "name": "Create Order (Product - Out Of Stock)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"userId\": \"user_789\",\n  \"vendorId\": \"{{vendorId}}\",\n  \"items\": [\n    { \"productId\": \"{{productId}}\", \"quantity\": 6 }\n  ]\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/orders",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "orders"
          ]
        }
      }
    },
    {
      "name": "Get Order",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/orders/{{orderId}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "orders",
            "{{orderId}}"
          ]
        }
      }
    },
    {
      "name": "Test Rate Limit",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "x-test-token",
            "value": "{{testToken}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"vendorId\": \"{{vendorId}}\",\n  \"requests\": 150,\n  \"concurrency\": 25,\n  \"includeResponses\": true,\n  \"ipMode\": \"single\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/testing/rate-limit",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "testing",
            "rate-limit"
          ]
        }
      }
    },
    {
      "name": "Test Out Of Stock",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "x-test-token",
            "value": "{{testToken}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"vendorId\": \"{{vendorId}}\",\n  \"stock\": 5,\n  \"requests\": 10,\n  \"quantity\": 1,\n  \"concurrency\": 10,\n  \"includeResponses\": true,\n  \"ipMode\": \"single\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/testing/out-of-stock",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "testing",
            "out-of-stock"
          ]
        }
      }
    },
    {
      "name": "Test Rate Limit (Rotate IPs)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "x-test-token",
            "value": "{{testToken}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"vendorId\": \"{{vendorId}}\",\n  \"requests\": 20,\n  \"concurrency\": 10,\n  \"includeResponses\": true,\n  \"ipMode\": \"rotate\",\n  \"ipPool\": [\n    \"203.0.113.10\",\n    \"203.0.113.11\",\n    \"203.0.113.12\"\n  ]\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/testing/rate-limit",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "testing",
            "rate-limit"
          ]
        }
      }
    },
    {
      "name": "Test Global Rate Limit",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "x-test-token",
            "value": "{{testToken}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"requests\": 350,\n  \"concurrency\": 50,\n  \"includeResponses\": true,\n  \"ipMode\": \"single\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/testing/global-rate-limit",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "testing",
            "global-rate-limit"
          ]
        }
      }
    },
    {
      "name": "Test Global Rate Limit (Rotate IPs)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "x-test-token",
            "value": "{{testToken}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"requests\": 30,\n  \"concurrency\": 10,\n  \"includeResponses\": true,\n  \"ipMode\": \"rotate\",\n  \"ipPool\": [\n    \"203.0.113.20\",\n    \"203.0.113.21\",\n    \"203.0.113.22\"\n  ]\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/testing/global-rate-limit",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "testing",
            "global-rate-limit"
          ]
        }
      }
    }
  ]
}